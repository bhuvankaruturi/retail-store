<%- include('../partials/header') %>
    <div class="container">
            <h1 class="text-center mt-1 mb-3">History</h1>
            <% if(history.items.length == 0) {%>
              <h1 class="text-center mt-5">You have not bought any items yet!</h1>
            <% } %>
            <% history.items.forEach(item => { %>
                <% i = item.itemid %>
                <div class="card mb-3" style="max-width: 540px; margin: auto">
                    <div class="row no-gutters">
                      <div class="col-md-4">
                        <img src="/images/items/<%=i.imageUrl%>" class="card-img w-100" alt="item image">
                      </div>
                      <div class="col-md-8">
                        <div class="card-body">
                          <div class="d-flex justify-content-between">
                            <h5 class="card-title"><%=i.itemname%></h5>
                          </div>
                          <p class="card-text"><small class="text-muted"><%=moment(item.date).format('MMM-DD-YYYY')%></small></p>
                          <p class="card-text">Price: <span class="price-lite">$<%=i.price%></span></p>
                          <p class="card-text">Size: <%=item.size%>, Quantity: <%=item.quantity%></p>
                        </div>
                      </div>
                    </div>
                </div>
            <% }) %>
        </div>
<%- include('../partials/footer') %>
