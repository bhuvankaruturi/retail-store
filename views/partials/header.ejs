<!DOCTYPE html>
<html>
  <head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <script
      src="https://code.jquery.com/jquery-3.5.0.min.js"
      integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ="
      crossorigin="anonymous"></script>
  </head>
  <body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Dress-Up</a>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/items">Home <span class="sr-only">(current)</span></a>
          </li>
          <% if (user && user.type === 'admin') { %>
            <li class="nav-item">
              <a class="nav-link" href="/items/add">Add item</a>
            </li>
          <% } %>
          <li class="nav-item">
            <form class="form-inline my-2 my-lg-0" action="/items" method="GET">
              <select class="form-control" id="filter" name="filter">
                <option value="" selected>Filter</option>
                <option value="shirt">Shirt</option>
                <option value="trousers">Trousers</option>
                <option value="footwear">Footwear</option>
                <option value="sunglasses">Sunglasses</option>
              </select>
              <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search" id="search" aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
          </li>
        </ul>
        <div class="navbar-nav">
        <% if (user) {%>
          <span class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </span>
          <span class="navbar-nav nav-item">
            <span class="navbar-text">Signed in as <%=user.username%></a>
            </span>
          <span class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </span>
        <%} else {%>
          <span class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </span>
          <span class="nav-item">
            <a class="nav-link" href="/signup">Signup</a>
          </span>
        <% } %>
        </div>
      </div>
    </nav>